{% endblock header %}

{% block body %}

<div class="container spacing">

    <div class="row">
        <div class="col-xs-12">
            <h1>Upgrade your account</h1>
            <p>CMS block: investor upgrade info</p>
        </div>
    </div><!-- end .row -->

    <form action="" method="post" role="form" class="form-register" id="lender_upgrade">
