{% include '_partials/lender/iban_calculator_modal.html.twig' %}


{% endblock body %}

{% block js %}
    {{ parent() }}

    <script>
        $(function(){

            $('#iban-modal').click(function(){
                $('#iban-calculator').modal('show');
            });
        });
    </script>
{% endblock js %}
