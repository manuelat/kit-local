                                <label for="premium_lender_street" class="text-danger hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                            </div>
                        </div>

                        <div class="col-xs-12 col-sm-3">
                            <div class="form-group">
                                <label for="premium_lender_street_number" class="required hidden-xs hidden-sm">{{ 'Nummer' }}</label>
                                <input type="text" placeholder="Nummer" id="premium_lender_street_number" class="form-control" required="required" maxlength="10">
                                <label for="premium_lender_street_number" class="text-danger hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                            </div>
                        </div>
                    </div><!-- end .row -->

                    <div class="row">
                        <div class="col-xs-12 col-sm-4">
                            <div class="form-group">
                                <label for="premium_lender_postal_code" class="required hidden-xs hidden-sm">{{ 'Postleitzahl' }}</label>
                                <input type="text" placeholder="Postleitzahl" id="premium_lender_postal_code" class="form-control" required="required" maxlength="20">
                                <label for="premium_lender_postal_code" class="text-danger hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                            </div>
                        </div>

                        <div class="col-xs-12 col-sm-8">
                            <div class="form-group">
                                <label for="premium_lender_city" class="required hidden-xs hidden-sm">{{ 'Stadt' }}</label>
                                <input type="text" placeholder="Stadt" id="premium_lender_city" class="form-control" required="required" maxlength="200">
                                <label for="premium_lender_city" class="text-danger hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                            </div>
                        </div>

                        <div class="clearfix"></div>

                    </div><!-- end .row -->

                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group">
                                <label for="premium_lender_birthday" class="required hidden-xs hidden-sm">{{ 'Geburtsdatum' }}</label>
                                <input type="text" placeholder="Geburtsdatum" id="premium_lender_birthday" class="form-control" placeholder="TT.MM.JJJJ" required="required">
                                <label for="premium_lender_birthday" class="text-danger hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group">
                                <label for="premium_lender_cellphone" class="required hidden-xs hidden-sm">{{ 'Mobiltelefonnummer' }}</label>
                                <input type="text" placeholder="Mobiltelefonnummer" id="premium_lender_cellphone" class="form-control" required="required">
