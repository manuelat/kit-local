                            </div>
                        </div>

                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group">
                                <label for="premium_lender_last_name" class="required hidden-xs hidden-sm">{{ 'Nachname' }}</label>
                                <!-- add class 'error' for the input to make the border red  when the alert is also present -->
                                <input type="text" placeholder="Nachname" id="premium_lender_last_name" class="form-control" required="required">
                                <label for="premium_lender_last_name" class="text-danger hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                            </div>
                        </div>
                    </div><!-- end .row -->

                    <div class="row">
                        <div class="col-xs-12 col-sm-9">
                            <div class="form-group">
                                <label for="premium_lender_street" class="required hidden-xs hidden-sm">{{ 'Straße' }}</label>
