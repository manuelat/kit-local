{% extends 'layout.html.twig' %}

{% block header %}

    {% include '_partials/headers/account-header.html.twig' %}

{% endblock header %}

{% block body %}

<div class="spacing">
    <form action="" method="post" role="form" class="form-register" id="premium_lender_form">
        <div class="container">

            <div class="row">
                <div class="col-xs-12 col-sm-6">
                    <h1 class="faux-h1">{{ 'Persönliche Angaben' }}</h1>
                </div>
            </div><!-- end .row -->

            <div class="row">
                <div class="col-xs-12 col-md-8 cancel-padding">
                    <h2 class="faux-h3">{{ 'Persönliche Angaben' }} <small class="pull-right">* Pflichtfeld</small></h2>
                </div>
            </div><!-- end .row -->


            <div class="row">

                <div class="col-xs-12 col-md-8">

                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <div class="radio-buttons">
                                    <input type="radio" class="hidden" value="male" name="premium_lender_gender" id="premium_lender_gender_m" required="required">
                                    <div class="custom-circle">
                                        <span></span> <!-- add class .selected when user clicks and an ID for TA -->
                                    </div>
                                    <label for="premium_lender_gender_m" class="required"> {{ 'Herr' }}</label>
                                </div>
                                <div class="radio-buttons">
                                    <input type="radio" class="hidden" value="female" name="premium_lender_gender" id="premium_lender_gender_f" required="required">
                                    <div class="custom-circle">
                                        <span></span> <!-- add class .selected when user clicks and an ID for TA -->
                                    </div>
                                    <label for="premium_lender_gender_f" class="required"> {{ 'Frau' }}</label>
                                </div>
                                <div class="clearfix"></div>
                                <label for="premium_lender_gender" class="error hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                            </div>
                        </div>
                    </div><!-- end .row -->

                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group">
                                <label for="premium_lender_first_name" class="required">{{ 'Vorname(n)' }}</label>
                                <!-- add class 'error' for the input to make the border red  when the alert is also present -->
                                <input type="text" id="premium_lender_first_name" class="form-control" required="required">
                                <label for="premium_lender_first_name" class="error hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                            </div>
                        </div>

                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group">
                                <label for="premium_lender_last_name" class="required">{{ 'Nachname' }}</label>
                                <!-- add class 'error' for the input to make the border red  when the alert is also present -->
                                <input type="text" id="premium_lender_last_name" class="form-control" required="required">
                                <label for="premium_lender_last_name" class="error hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                            </div>
                        </div>
                    </div><!-- end .row -->

                    <div class="row">
                        <div class="col-xs-12 col-sm-9">
                            <div class="form-group">
                                <label for="premium_lender_street" class="required">{{ 'Straße' }}</label>
                                <!-- add class 'error' for the input to make the border red  when the alert is also present -->
                                <input type="text" id="premium_lender_street" class="form-control" required="required" maxlength="200">
                                <label for="premium_lender_street" class="error hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                            </div>
                        </div>

                        <div class="col-xs-12 col-sm-3">
                            <div class="form-group">
                                <label for="premium_lender_street_number" class="required">{{ 'Nummer' }}</label>
                                <input type="text" id="premium_lender_street_number" class="form-control" required="required" maxlength="10">
                                <label for="premium_lender_street_number" class="error hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                            </div>
                        </div>
                    </div><!-- end .row -->

                    <div class="row">
                        <div class="col-xs-12 col-sm-4">
                            <div class="form-group">
                                <label for="premium_lender_postal_code" class="required">{{ 'Postleitzahl' }}</label>
                                <input type="text" id="premium_lender_postal_code" class="form-control" required="required" maxlength="20">
                                <label for="premium_lender_postal_code" class="error hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                            </div>
                        </div>

                        <div class="col-xs-12 col-sm-8">
                            <div class="form-group">
                                <label for="premium_lender_city" class="required">{{ 'Stadt' }}</label>
                                <input type="text" id="premium_lender_city" class="form-control" required="required" maxlength="200">
                                <label for="premium_lender_city" class="error hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                            </div>
                        </div>

                        <div class="clearfix"></div>

                    </div><!-- end .row -->

                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group">
                                <label for="premium_lender_birthday" class="required">{{ 'Geburtsdatum' }}</label>
                                <input type="text" id="premium_lender_birthday" class="form-control" placeholder="TT.MM.JJJJ" required="required">
                                <label for="premium_lender_birthday" class="error hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group">
                                <label for="premium_lender_cellphone" class="required">{{ 'Mobiltelefonnummer' }}</label>
                                <input type="text" id="premium_lender_cellphone" class="form-control" required="required">
                                <label for="premium_lender_cellphone" class="error hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                            </div>
                        </div>
                    </div><!-- end .row -->

                    <div class="row">
                        <div class="col-xs-12 cancel-padding">
                            <h2 class="faux-h3">{{ 'Bankverbindung' }} <i title="" data-placement="top" data-toggle="tooltip" class="fa fa-question-circle" data-original-title="Die Zinsen aus aktiven Geboten zeigen die zu erwartenden Zinszahlungen vor Service-Gebühren. Diese Zinsen erhalten Sie, wenn alle Kredite, in die Sie investiert haben, erfolgreich sind und die jeweiligen Beträge an die Unternehmer ausgezahlt werden."></i></h2>
                        </div>
                    </div><!-- end .row -->

                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="premium_lender_bank_account_holder" class="required">{{ 'Kontoinhaber' }}</label>
                                <input type="text" id="premium_lender_bank_account_holder" class="form-control" required="required" maxlength="100">
                                <label for="premium_lender_bank_account_holder" class="error hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                            </div>
                        </div>
                    </div><!-- end .row -->

                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group">
                                <label for="premium_lender_bank_account_number" class="required">{{ 'IBAN' }}</label>
                                <input type="text" id="premium_lender_bank_account_number" class="form-control" required="required" maxlength="22">
                                <label for="premium_lender_bank_account_number" class="error hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                            </div>
                        </div>

                        <!-- Button trigger modal -->
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group">
                                <label class="required hidden-xs hidden-sm">{{ 'IBAN berechnen' }}</label>
                                <button type="button" id="iban-modal" class="btn btn-block">{{ 'IBAN berechnen' }}</button>
                            </div>
                        </div>

                        <div class="clearfix"></div>

                    </div><!-- end .row -->

                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group">
                                <label for="premium_lender_bank_account_bic_code" class="required">{{ 'BIC' }}</label>
                                <input type="text" id="premium_lender_bank_account_bic_code" class="form-control" required="required">
                                <label for="premium_lender_bank_account_bic_code" class="error hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                            </div>
                        </div>
                    </div><!-- end .row -->

                    <div class="row">
                        <div class="col-xs-12 cancel-padding">
                            <h2 class="faux-h3">{{ 'Identifikation' }}</h2>
                        </div>
                    </div><!-- end .row -->

                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label class="required hidden-xs hidden-sm">Art</label>
                                <select class="selectpicker show-tick" data-width="100%">
                                    <option value="">Personalausweis</option>
                                    <option value="">Reisepass</option>
                                </select>
                            </div>
                        </div>
                    </div><!-- end .row -->

                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="premium_lender_identification_id_number" class="required">{{ 'Nummer des Identifikations-Dokuments' }}</label>
                                <input type="text" id="premium_lender_identification_id_number" class="form-control" required="required">
                                <label for="premium_lender_identification_id_number" class="error hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                            </div>
                        </div>
                    </div><!-- end .row -->

                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="identification_place_of_issue" class="required">{{ 'Ausstellungsort' }}</label>
                                <input type="text" id="identification_place_of_issue" class="form-control" required="required">
                                <label for="identification_place_of_issue" class="error hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                            </div>
                        </div>
                    </div><!-- end .row -->

                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="premium_lender_identification_issue_date" class="required">{{ 'Erstellt am' }}</label>
                                <input type="text" id="premium_lender_identification_issue_date" class="form-control" placeholder="TT.MM.JJJJ" required="required">
                                <label for="premium_lender_identification_issue_date" class="error hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                            </div>
                        </div>
                    </div><!-- end .row -->

                    <div class="row">
                        <div class="col-xs-12 col-md-6">
                            <div class="form-group">
                                <label for="premium_lender_city_of_birth" class="required">{{ 'Geburtsort' }}</label>
                                <input type="text" id="premium_lender_city_of_birth" class="form-control" required="required">
                                <label for="premium_lender_city_of_birth" class="error hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                            </div>
                        </div>

                        <div class="col-xs-12 col-md-6">
                            <div class="form-group">
                                <label for="premium_lender_birth_name">{{ 'Geburtsname' }}</label>
                                <input type="text" id="premium_lender_birth_name" class="form-control" required="required">
                                <label for="premium_lender_birth_name" class="error hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                            </div>
                        </div>
                    </div><!-- end .row -->

                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label class="required hidden-xs hidden-sm">Staatsangehörigkeit</label>
                                <select class="selectpicker show-tick" data-width="100%">
                                    <option value="">Deutschland</option>
                                    <option value="">Afghanistan</option>
                                    <option value="">Albanien</option>
                                </select>
                            </div>
                        </div>
                    </div><!-- end .row -->

                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <div class="checkbox-buttons">
                                    <input type="checkbox" class="hidden" value="" name="premium_lender_no_cancellation_period" id="premium_lender_no_cancellation_period" required="required">
                                    <div class="custom-square">
                                        <span class="fa"></span> <!-- add class 'fa-check' when the user clicks and an ID for TA -->
                                    </div>
                                    <label for="premium_lender_no_cancellation_period" class="required">
                                        {{ 'Ich erkläre mich ausdrücklich damit einverstanden, dass die Wirecard Bank AG nach Annahme meines Antrages auf Abschluss des Vertrags, aber noch vor Ablauf der Widerrufsfrist mit der Ausführung dieses Vertrages beginnt.' }}
                                    </label>
                                    <label role="alert" class="error hidden" for="premium_lender_no_cancellation_period">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                                </div>
                                <div class="checkbox-buttons">
                                    <input type="checkbox" class="hidden" value="" name="premium_lender_bank_account_access_permit" id="premium_lender_bank_account_access_permit" required="required">
                                    <div class="custom-square">
                                        <span class="fa"></span> <!-- add class 'fa-check' when the user clicks and an ID for TA -->
                                    </div>
                                    <label for="premium_lender_bank_account_access_permit" class="required">
                                        {{ 'Ich ermächtige die Zencap Connect GmbH Zahlungen von meinem Konto mittels Lastschrift einzuziehen. Zugleich weise ich mein Kreditinstitut an, die von der Zencap Connect GmbH auf mein Konto gezogenen Lastschriften einzulösen.' }}
                                       </label>
                                    <label role="alert" class="error hidden" for="premium_lender_bank_account_access_permit">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                                </div>

                            </div>
                        </div>
                    </div><!-- end .row -->

                </div><!-- .col-xs-12 -->
            </div><!-- end .row -->
        </div><!-- .container -->

        <div class="container-wrapper form-footer odd">
            <div class="container spacing">
                <div class="row">
                    <div class="col-xs-12 screen-align-btn">
                        <button class="btn btn-lg btn-nvstr" type="submit">{{ 'Antrag zur Kontoeröffnung stellen' }}</button>
                    </div>
                </div>
            </div>
        </div><!-- .container-wrapper -->

        <div class="clearfix"></div>

    </form>
</div><!-- end .spacing -->

<!--

