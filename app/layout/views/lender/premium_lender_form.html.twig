                    </div><!-- end .row -->

                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group">
                                <label for="premium_lender_bank_account_bic_code" class="required hidden-xs hidden-sm">{{ 'BIC' }}</label>
