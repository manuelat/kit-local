                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="premium_lender_bank_account_holder" class="required hidden-xs hidden-sm">{{ 'Kontoinhaber' }}</label>
                                <input type="text" placeholder="Kontoinhaber" id="premium_lender_bank_account_holder" class="form-control" required="required" maxlength="100">
                                <label for="premium_lender_bank_account_holder" class="text-danger hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                            </div>
                        </div>
                    </div><!-- end .row -->

                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group">
                                <label for="premium_lender_bank_account_number" class="required hidden-xs hidden-sm">{{ 'IBAN' }}</label>
                                <input type="text" placeholder="IBAN" id="premium_lender_bank_account_number" class="form-control" required="required" maxlength="22">
