                        <div class="col-xs-12 cancel-padding">
                            <h2 class="faux-h3">{{ 'Identifikation' }}</h2>
                        </div>
                    </div><!-- end .row -->

                    <div class="row">
                        <div class="col-xs-12">
                            <label class="required hidden-xs hidden-sm">Art</label>
                            <div class="btn-group btn-block">
                                <button data-toggle="dropdown" class="form-control btn dropdown-toggle" type="button" aria-expanded="false">
                                    <span class="pull-left">{{ 'Personalausweis' }}</span>
                                    <span class="fa fa-chevron-down pull-right"></span>
                                </button>
                                <ul role="menu" class="dropdown-menu col-xs-12 col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 col-lg-12 col-lg-offset-0">
                                    <li><a href="#"><i class="fa fa-check pull-right"></i>{{ 'Personalausweis' }}
