                            </div>
                        </div>
                    </div><!-- end .row -->

                    <div class="row">
                        <div class="col-xs-12 col-md-6">
                            <div class="form-group">
                                <label for="premium_lender_city_of_birth" class="required hidden-xs hidden-sm">{{ 'Geburtsort' }}</label>
                                <input type="text" id="premium_lender_city_of_birth" class="form-control" placeholder="Geburtsort" required="required">
                                <label for="premium_lender_city_of_birth" class="text-danger hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                            </div>
                        </div>

                        <div class="col-xs-12 col-md-6">
                            <div class="form-group">
                                <label for="premium_lender_birth_name" class="hidden-xs hidden-sm">{{ 'Geburtsname' }}</label>
                                <input type="text" id="premium_lender_birth_name" class="form-control" placeholder="Geburtsname" required="required">
                                <label for="premium_lender_birth_name" class="text-danger hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                            </div>
                        </div>
                    </div><!-- end .row -->

                    <div class="row">
                        <div class="col-xs-12">
                            <label class="required hidden-xs hidden-sm">Staatsangehörigkeit</label>
