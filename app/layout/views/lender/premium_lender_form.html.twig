                                    <li><a href="#">{{ 'Reisepass' }}</a></li>
                                </ul>
                            </div>
                        </div>

                        <div class="desp-20"></div>

                    </div><!-- end .row -->

                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="premium_lender_identification_id_number" class="required hidden-xs hidden-sm">{{ 'Nummer des Identifikations-Dokuments' }}</label>
                                <input type="text" id="premium_lender_identification_id_number" placeholder="Nummer des Identifikations-Dokuments" class="form-control" required="required">
                                <label for="premium_lender_identification_id_number" class="text-danger hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                            </div>
                        </div>
                    </div><!-- end .row -->

                    <div class="row">
                        <div class="col-xs-12">
