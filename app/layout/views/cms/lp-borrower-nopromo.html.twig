                        </div>
                    </div><!-- end .carousel-inner-->

                    <!-- Controls -->
                    <a class="left carousel-control" href="#fees-borrower" role="button" data-slide="prev">
                        <span class="fa fa-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#fees-borrower" role="button" data-slide="next">
                        <span class="fa fa-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>

                </div><!-- #fees-borrower -->
            </div>
            <!-- end .carousel -->

            <div class="row">
                <div class="col-xs-12 text-center">
                    <a id="loan-submit-2" class="btn btn-lg btn-brrwr" type="submit" href="/loan-request/register#baseForm">Jetzt Kredit beantragen</a>
                    <div class="desp-10"></div>
                    <p>Oder noch <a href="/kreditnehmer-hilfe-16.html?faq">Fragen zum Thema?</a></p>
                </div>
            </div>

        </div>
    </div><!-- end .container-wrapper -->

    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <a href="/presse-36.html#pressestimmen">
                    <img class="hidden-xs img-responsive" alt="" src="https://d1x3gb5zl465n8.cloudfront.net/de/home/press/logos_update2.png">
                </a>
            </div>
        </div>
    </div>

</div><!-- end .cms-page -->

{% endblock %}

{% block js %}
    {{ parent() }}
    <script src="/bundles/intlendweblayout/js/sliderCalculator.js"></script>
    <script>
        $(function(){
            if ($(document).width() > 991) {
                $('.carousel-control').addClass('hidden-md');
                $('.carousel-control').addClass('hidden-lg');
                $('.carousel-inner').children('.item').each(function(){
                    $(this).addClass('active');
                    $(this).addClass('col-md-4');
                });
            }
        });
    </script>
{% endblock %}