{% extends 'layout.html.twig' %}

{% block body %}


<div class="cms-page borrower">

    <div class="container-wrapper header-top fees">
        <div class="container spacing">
            <div class="row main-title">
                <div class="col-xs-11 col-sm-6 col-md-7">
                    <h1 class="text-white">Transparant online krediet<br/>zonder valkuilen</h1>
                    <p class="hidden-xs hidden-sm">Zencap is de betrouwbare <br/>financieringspartner voor uw bedrijf
                        Unternehmen</p>
                    <a href="/loan-request/register#baseForm" type="submit" class="hidden-xs btn btn-lg btn-brrwr" id="loan-submit-2">Nu een krediet aanvragen</a>
                </div>
            </div>
        </div>
    </div><!-- end .container-wrapper -->

    <div class="container-wrapper loan-types">
        <div class="container spacing">

            <!-- carousel with table fees visible on mobile, small tablets -->
            <div class="row">
                <div id="fees-borrower" class="carousel slide col-xs-12 col-sm-8 col-sm-offset-2 col-md-12 col-md-offset-0 ">
                    <!-- Carousel items -->
                    <div class="carousel-inner">
                        <div class="active item">

                            <table class="table">
                                <caption class="text-center">Maximale service</caption>
                                <thead>
                                <tr>
                                    <th>Prestaties</th>
                                    <th>Kosten</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td>Zencap-account</td>
                                    <th class="text-borrower-dark">gratis</th>
                                </tr>
                                <tr>
                                    <td>Kredietaanbod</td>
                                    <th class="text-borrower-dark">gratis</th>
                                </tr>
                                <tr>
                                    <td>Individueel advies</td>
                                    <th class="text-borrower-dark">gratis</th>
                                </tr>
                                <tr>
                                    <td>Vervroegde aflossing</td>
                                    <th class="text-borrower-dark">gratis</th>
                                </tr>
                                <tr>
                                    <td>Kredietwaardigheidscontrole</td>
                                    <th class="text-borrower-dark">gratis</th>
                                </tr>
                                </tbody>
                            </table>

                        </div>

                        <div class="item">
                            <table class="table">
                                <caption class="text-center">Eerlijke rente</caption>
                                <thead>
                                <tr>
                                    <th>Kredietklasse</th>
                                    <th>Nominale rente</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td>A+</td>
                                    <th class="text-borrower-dark">3,99 % - 5,99 %</th>
                                </tr>
                                <tr>
                                    <td>A</td>
                                    <th class="text-borrower-dark">4,48 % - 6,80 %</th>
                                </tr>
                                <tr>
                                    <td>B</td>
                                    <th class="text-borrower-dark">5,41 % - 8,44 %</th>
                                </tr>
                                <tr>
                                    <td>C</td>
                                    <th class="text-borrower-dark">7,30 % - 11,91 %</th>
                                </tr>
                                <tr>
                                    <td>C-</td>
                                    <th class="text-borrower-dark">11,32 % - 15,64 %</th>
                                </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="item">
                            <table class="table">
                                <caption class="text-center">Transparante tarieven *</caption>
                                <thead>
                                <tr>
                                    <th>Looptijd</th>
                                    <th>Kosten</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td>6 maanden</td>
                                    <th class="text-borrower-dark">1 %</th>
                                </tr>
                                <tr>
                                    <td>12 maanden</td>
                                    <th class="text-borrower-dark">2 %</th>
                                </tr>
                                <tr>
                                    <td>24 maanden</td>
                                    <th class="text-borrower-dark">3 %</th>
                                </tr>
                                <tr>
                                    <td>36 maanden</td>
                                    <th class="text-borrower-dark">4 %</th>
                                </tr>
                                <tr>
                                    <td>48/60 maanden</td>
                                    <th class="text-borrower-dark">4,5 %</th>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div><!-- end .carousel-inner-->

                    <!-- Controls -->
                    <a class="left carousel-control" href="#fees-borrower" role="button" data-slide="prev">
                        <span class="fa fa-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#fees-borrower" role="button" data-slide="next">
                        <span class="fa fa-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>

                </div><!-- #fees-borrower -->
            </div>
            <!-- end .carousel -->

            <div class="row">
                <div class="col-xs-12">
                    <p>
                        <small>* De kosten worden eenmalig op het totale kredietbedrag ingehouden.</small>
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <p>Onze aanpak: financiering voor uw bedrijf hoeft niet tijdrovend en ingewikkeld te zijn. Het indienen van uw kredietaanvraag kost slechts<br>15 minuten. Zodra we uw documenten ontvangen hebben, nemen we binnen maximaal 48 uur een kredietbesluit. </p>
                    <p>Onze tarieven zijn transparant. Het persoonlijke advies van uw <a target="_blank" href="/contact-89.html">contactpersoon</a> en onze kredietwaardigheidscontrole zijn helemaal gratis. Pas bij de uitbetaling van uw lening brengen wij de aangegeven bemiddelingskosten in rekening (deze wordt ingehouden op het totale kredietbedrag).</p>
                    <p>Om u tijd en moeite te besparen, hebben we op deze pagina de essentiële bouwstenen voor kredietfinanciering via Zencap samengevat.</p>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12 text-center">
                    <a class="btn btn-lg btn-brrwr" href="/loan-request/register#baseForm">Nu een krediet aanvragen</a>
                </div>
            </div>

        </div>
    </div><!-- end .container-wrapper -->

    <div class="container-wrapper borrower-steps odd  col-md-12">
        <div class="container spacing">
            <div class="row">
                <h2 class="faux-h1 text-center col-xs-12">In drie stappen naar online geld lenen</h2>
                <p class="hidden-xs hidden-sm col-md-10 col-md-offset-1">
                    <img class="img-responsive" alt="" src="https://d1x3gb5zl465n8.cloudfront.net/nl/bundles/steps.png" />
                </p>
                <div class="hidden-xs hidden-sm col-md-3 col-md-offset-1">
                    <h3>Aanvraag indienen</h3>
                </div>
                <div class="hidden-xs hidden-sm col-md-4">
                    <h3 class="text-center">Financiering krijgen</h3>
                </div>
                <div class="hidden-xs hidden-sm col-md-4">
                    <h3>Ontvangen geld boeken</h3>
                </div>
            </div>
        </div>
    </div><!-- end .container-wrapper -->

    <div class="clearfix"></div>

    <div class="container-wrapper apply">
        <div class="container spacing">
            <div class="row visual">
                <div class="col-xs-12 visual-inner">
                    <img class="pull-left"
                         src="https://d2pxc3go2nr9i6.cloudfront.net/bundles/intlendnlweblayout/frontend/images/cms/rates-and-fees-borrower/borrower-step-1.png"
                         alt="" />
                    <div class="col-xs-8 col-sm-10 pull-left visual-inner">
                        <h3 class="title-lead">Financieringsaanvraag indienen</h3>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-md-11 col-md-offset-1">
                    <div class="desp-10 hidden-md hidden-lg"></div>
                    <p><strong>Minimumeisen</strong></p>

                    <p>Uw bedrijf komt in aanmerking bij Zencap als:</p>

                    <ul>
                        <li>Het bedrijf een minimale omzet heeft van €100.000.</li>
                        <li> Het bedrijf minimaal 2 jaar bestaat.</li>
                        <li> De balansen zijn opgemaakt via het Nederlandse Handelswetboek. </li>
                    </ul>

                    <p><strong>Bedrijfsinformatie</strong></p>

                    <p>Om een beeld van uw bedrijf te krijgen vragen wij u om enige informatie over uw bedrijfsactiviteiten, de hoogte van het gewenste krediet, waarvoor u het krediet wilt gebruiken en de looptijd van het krediet.  Belangrijk: houd bij de keuze van de looptijd rekening met de resultaten van uw bedrijf zodat u zeker weet dat u de lening af kunt lossen.</p>

                    <p><strong>Hoe bepaalt u de kredietperiode?</strong></p>
                    <table class="table table-terms">
                        <thead>
                        <tr>
                            <th>Financieringsduur</th>
                            <th>Soort financiering</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                           {# <th class="text-borrower-dark hidden-xs visible-sm visible-md visible-lg">Korte termijn</th>#}
                            <th class="text-borrower-dark">Korte termijn <br>(6 maanden)</th>
                            <td>Voorfinanciering van orders, voorfinanciering, projectfinanciering</td>
                        </tr>
                        <tr>
                            {#<th class="text-borrower-dark hidden-xs visible-sm visible-md visible-lg">Mittelfristig</th>#}
                            <th class="text-borrower-dark">Mittelfristig <br>(1 tot 2 jaar)</th>
                            <td>Liquiditeit, werkkapitaal, voorraden</td>
                        </tr>
                        <tr>
                            {#<th class="text-borrower-dark hidden-xs visible-sm visible-md visible-lg">Langfristig</th>#}
                            <th class="text-borrower-dark">Langfristig <br>(3 tot 5 jaar</th>
                            <td>Financiering van machines, voertuigen, software, licenties, kantoormeubilair en apparatuur</td>
                        </tr>
                        </tbody>
                    </table>

                    <p><strong>Documenten</strong></p>

                    <p>Om met de kredietanalyse te beginnen, hebben we de laatste twee jaarrekeningen en een recente winst- en verliesrekening nodig.</p>

                    <div class="facts hidden-xs hidden-sm visible-md visible-lg">
                        <div id="accordion-1" class="panel-group">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a class="collapsed" href="#collapse-1" data-parent="#accordion-1"
                                           data-toggle="collapse" aria-expanded="false">
                                            Wist u dat...
                                            <i class="fa fa-medium fa-minus-square fa-plus-square pull-right"></i>
                                        </a>
                                    </h4>
                                </div>
                                <div class="panel-collapse collapse" id="collapse-1">
                                    <div class="panel-body">
                                        ...u op elk gewenst moment via e-mail (of tijdens kantooruren per telefoon) contact kunt opnemen met uw persoonlijke <a target="_blank" href="/contact-89.html">contactpersoon</a>? Deze staat u tijdens het gehele aanvraag- en financieringsproces met advies terzijde.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="desp-20"></div>

            <div class="row">
                <div class="col-xs-12 text-center">
                    <a class="btn btn-lg btn-brrwr" href="/loan-request/register#baseForm">Nu een krediet aanvragen</a>
                </div>
            </div>

        </div>
    </div><!-- end .container-wrapper -->

    <div class="container-wrapper assess odd">
        <div class="container spacing">
            <div class="row visual">
                <div class="col-xs-12 visual-inner">
                    <img class="pull-left"
                         src="https://d2pxc3go2nr9i6.cloudfront.net/bundles/intlendnlweblayout/frontend/images/cms/rates-and-fees-borrower/borrower-step-2.png"
                         alt="">
                    <h3 class="title-lead col-xs-8 col-sm-10">Financieringstoezegging krijgen</h3>
                </div>
                <div class="col-xs-12 col-md-11 col-md-offset-1">
                    <div class="desp-10 hidden-md hidden-lg"></div>
                    <p>Als wij de volledige aanvraag hebben, dan controleren we die binnen 48 uur, waarna we een kredietbesluit nemen. Onze kredietanalisten evalueren de kredietwaardigheid van uw bedrijf op individuele basis. Als er vragen zijn, nemen onze kredietanalisten persoonlijk contact met u op.</p>
                    <p>Als uw financieringsaanvraag door de controle is gekomen, sturen wij u per ommegaande via e-mail de gedetailleerde voorwaarden van ons aanbod. Bevestig de voorwaarden en geef met één klik uw project meteen vrij.</p>
                </div>
            </div>

        </div>
    </div><!-- end .container-wrapper -->

    <div class="container-wrapper funds">
        <div class="container spacing">
            <div class="row visual">
                <div class="col-xs-12 visual-inner">
                    <img class="pull-left" src="https://d2pxc3go2nr9i6.cloudfront.net/bundles/intlendnlweblayout/frontend/images/cms/rates-and-fees-borrower/borrower-step-3.png"
                         alt="">
                    <div class="col-xs-8 col-sm-10 pull-left visual-inner">
                        <h3 class="title-lead">Ontvangen geld boeken</h3>
                    </div>
                </div>
                <div class="col-xs-12 col-md-11 col-md-offset-1">
                    <div class="desp-10 hidden-md hidden-lg"></div>
                    <p>Als uw kredietproject volledig is gefinancierd, sturen wij u meteen uw kredietovereenkomst per e-mail. Nadat u de overeenkomst hebt ontvangen en deze heeft doorgelezen, kunt u deze accepteren door op de link te klikken. U dient dit te doen  binnen maximaal 10 werkdagen omdat de geïnvesteerde bedragen alleen voor die periode zijn gereserveerd. Nadat u de overeenkomst heeft geaccepteerd,  wordt het bedrag  binnen zes werkdagen op uw rekening overgemaakt.</p>
                    <p>De aflossing vindt gemakkelijk plaats via automatische incasso. Stel ons op tijd op de hoogte als er een betalingsachterstand dreigt, zodat we samen naar een oplossing kunnen zoeken.</p>

                    <div class="facts hidden-xs hidden-sm visible-md visible-lg">
                        <div id="accordion-3" class="panel-group">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a class="collapsed" href="#collapse-3" data-parent="#accordion-3"
                                           data-toggle="collapse">
                                            Wist u dat...
                                            <i class="fa fa-medium fa-minus-square fa-plus-square pull-right"></i>
                                        </a>
                                    </h4>
                                </div>
                                <div class="panel-collapse collapse" id="collapse-3">
                                    <div class="panel-body">
                                        ... u via Zencap meerdere kredieten per jaar kunt opnemen? Al zes maanden na een  aanvraag kunt u weer online financiering aanvragen. Uw persoonlijke
                                        <a href="/contact-89.html" target="_blank">contactpersoon</a> geeft u graag meer informatie.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="desp-20"></div>

            <div class="row">
                <div class="col-xs-12 text-center">
                    <a href="/loan-request/register#baseForm" type="submit" class="btn btn-lg btn-brrwr" id="loan-submit-2">Nu een krediet aanvragen</a>
                    <div class="desp-10"></div>
                    <p>Of hebt u nog <a href="/vragen-bedrijven-90.html">vragen?</a></p>
                </div>
            </div>
        </div>
    </div><!-- end .container-wrapper -->

</div><!-- end .cms-page -->

{% endblock %}

{% block js %}
    {{ parent() }}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script>
        $(function(){
            if ($(document).width() > 991) {
                $('.carousel-control').addClass('hidden-md');
                $('.carousel-control').addClass('hidden-lg');
                $('.carousel-inner').children('.item').each(function(){
                    $(this).addClass('active');
                    $(this).addClass('col-md-4');
                });
            }
        });
    </script>
{% endblock %}