<table class="table table-striped">
    <thead>
    <tr>
        <th>Eigang</th>
        <th class="text-right">Betrag</th>
        <th class="text-right">Tilgung</th>
        <th class="text-right">Zinsen</th>
        <th class="text-right">Zinsen Lorem</th>
        <th class="text-right">Ausstehend Tilgung</th>
        <th class="text-right">Status</th>
    </tr>
    </thead>
    <tbody>
        {% for art in articles %}
    <tr>
        <td>{{ art.date }}</td>
        <td class="text-right">{{ art.amount }}</td>
        <td class="hidden-xs text-right">{{ art.principal }}</td>
        <td class="hidden-xs text-right">{{ art.interest_amount }}</td>
        <td class="hidden-xs text-right">{{ art.interest_carried }}</td>
        <td class="hidden-xs hidden-sm text-right">{{ art.outstanding_principal }}</td>
        <td class="hidden-xs hidden-sm text-right">{{ art.state }}</td>
    </tr>
        {% endfor %}
    </tbody>
</table>