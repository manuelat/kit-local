<table class="table table-striped custom-table">
    <thead>
    <tr>
        <th class="loan-title left-position">Kreditprojekt</th>
        <th class="text-right">Betrag</th>
        <th class="hidden-xs text-center">Laufzeit</th>
        <th class="hidden-xs text-right">Zinssatz</th>
        <th class="hidden-xs text-right">Ratenhöhe</th>
        <th class="hidden-xs hidden-sm text-right">Ausstehend Tilgung</th>
        <th class="hidden-xs hidden-sm text-right">Status</th>
        <th class="text-right right-position">Aktion</th>
    </tr>
    </thead>
    <tbody>
        <tr>
            <td class="loan-title left-position"><a class="xs-height" href="{{ path('payments_details') }}">{{ articles[0].title|truncate(35) }}</a></td>
            <td class="text-right">{{ articles[0].amount }}</td>
            <td class="hidden-xs text-center">{{ articles[0].duration_months }}</td>
            <td class="hidden-xs text-right">{{ articles[0].interest }}</td>
            <td class="hidden-xs text-right">{{ articles[0].monthly_payment }}</td>
            <td class="hidden-xs hidden-sm text-right">{{ articles[0].outstanding_principal }}</td>
            <td class="hidden-xs hidden-sm text-right">Rückzahlung</td>
            <td class="text-right right-position"><a href="{{ path('payments_details') }}">{{ articles[0].aktion }}</a></td>
        </tr>
    </tbody>
</table>