    <div class="row">
        <div class="col-xs-12 cancel-padding">
            <h2 class="faux-h3">{{ 'Adresse ' }}</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-sm-10">
            <div class="form-group">
                <label for="warrantor_street" class="required">{{ 'Straße' }}</label>
                <input type="text" id="warrantor_street" class="form-control" required="required" maxlength="200">
