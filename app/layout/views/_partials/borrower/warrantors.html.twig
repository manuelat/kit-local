                </select>
                <label class="error hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
            </div>
        </div>
        
    </div>

    <div class="row">
        <div class="col-xs-12 col-sm-6">
            <div class="form-group">
                <label for="warrantor_city_of_birth" class="required">{{ 'Geburtsort' }}</label>
                <input type="text" id="warrantor_city_of_birth" class="form-control" required="required">
                <label  class="error hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6">
            <div class="form-group">
                <label class="required">Geburtsland</label>
                <select class="selectpicker show-tick" data-width="100%">
                    <option value="">Deutschland.</option>
                    <option value="">-------------------</option>
                    <option value="">Afghanistan</option>
                </select>
                <label class="error hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 cancel-padding">
            <h2 class="faux-h3">{{ 'Kontaktdaten ' }}</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-sm-6">
            <div class="form-group">
                <label for="warrantor_email" class="required">{{ 'Email' }}</label>
                <input type="email" id="warrantor_email" class="form-control" required="required">
                <label for="warrantor_email" class="error hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
            </div>
        </div>

        <div class="col-xs-12 col-sm-6">
            <div class="form-group">
                <label for="warrantor_cellphone" class="required">{{ 'Mobiltelefon' }}</label>
