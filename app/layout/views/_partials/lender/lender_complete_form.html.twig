                        </div>
                    </div>
                </div><!-- end .row -->

                <div class="row">
                    <div class="col-xs-12 col-sm-6">
                        <div class="form-group">
                            <label for="lender_complete_bank_account_typed_bic_code" class="required">{{ 'BIC' }}</label>
