                            <div class="custom-circle">
                                <span class="" id="select_complete_gender_m"></span> <!-- add class .selected when user clicks and an ID for TA -->
                            </div>
                            <label for="lender_complete_gender_m" class="required"> {{ 'Herr' }}</label>
                        </div>
                        <div class="radio-buttons">
                            <input type="radio" class="hidden" value="female" name="lender_complete_gender" id="lender_complete_gender_f" required="required">
                            <div class="custom-circle">
                                <span class="" id="select_complete_gender_f"></span> <!-- add class .selected when user clicks and an ID for TA -->
                            </div>
                            <label for="lender_complete_gender_f" class="required"> {{ 'Frau' }}</label>
                        </div>
                        <div class="clearfix"></div>
                        <label for="lender_complete_gender" class="error hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                    </div>
                </div><!-- end .row -->

                <div class="row">
                    <div class="col-xs-12 col-sm-6">
                        <div class="form-group">
                            <label for="lender_complete_first_name" class="required">{{ 'Vorname(n)' }}</label>
                            <input type="text" id="lender_complete_first_name" class="form-control" required="required">
                            <label  class="error hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6">
                        <div class="form-group">
                            <label for="lender_complete_last_name" class="required">{{ 'Nachname' }}</label>
                            <input type="text" id="lender_complete_last_name" class="form-control" required="required">
                            <label  class="error hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                        </div>
                    </div>
                </div><!-- end .row -->

                <div class="row">
                    <div class="col-xs-12 col-sm-9">
                        <div class="form-group">
                            <label for="lender_complete_street" class="required">{{ 'Straße' }}</label>
                            <input type="text" id="lender_complete_street" class="form-control" required="required" maxlength="200">
                            <label  class="error hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-3">
                        <div class="form-group">
                            <label for="lender_complete_street_number" class="required">{{ 'Nummer' }}</label>
                            <input type="text" id="lender_complete_street_number" class="form-control" required="required" maxlength="10">
                            <label  class="error hidden" role="alert">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                        </div>
                    </div>
                </div><!-- end .row -->

                <div class="row">
                    <div class="col-xs-12 col-sm-4">
                        <div class="form-group">
                            <label for="lender_complete_postal_code" class="required">{{ 'Postleitzahl' }}</label>
                            <input type="text" id="lender_complete_postal_code" class="form-control" required="required" maxlength="20">
