                        <div class="form-group">
                            <label for="lender_complete_bank_account_bic_code" class="required">Name der Bank</label><br>
                            <select class="selectpicker show-tick hidden" data-width="100%">
                                <option value="">...</option>
                                <option value="">...</option>
                            </select>
                           <label class="placeholder">Commerzbank Gf 261 Hamburg</label>
                        </div>
                    </div>

                    <div class="clearfix visible-lg-block"></div>

                </div><!-- end .row -->

                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <div class="checkbox-buttons">
                                <input type="checkbox" class="hidden" value="" name="lender_complete_bank_account_access_permit" id="lender_complete_bank_account_access_permit" required="required">
                                <div class="custom-square">
                                    <span class="fa" id="select_bank_account_permit"></span> <!-- add class .fa-check when user clicks and an ID for TA -->
                                </div>
                                <label for="lender_complete_bank_account_access_permit" class="required">
                                    {{ 'Ich ermächtige die Zencap Connect GmbH Zahlungen von meinem Konto mittels Lastschrift einzuziehen. Zugleich weise ich mein Kreditinstitut an, die von der Zencap Connect GmbH auf mein Konto gezogenen Lastschriften einzulösen.' }}
                                </label>
                                <label role="alert" class="error hidden" for="lender_complete_bank_account_access_permit">Lorem ipsum dolor sit amet, consectetur adipiscing elit</label>
                            </div>

                        </div>
                    </div>
                </div>

            </div><!-- end .col-xs-12 -->
        </div><!-- end .row -->

    </div><!-- end .container -->

    <div class="container-wrapper form-footer odd">
        <div class="container spacing">
            <div class="row">
                <div class="col-xs-12 screen-align-btn">
                    <button class="btn btn-lg btn-nvstr" type="submit" id="btn_save">{{ 'Speichern und Gebote überprüfen' }}</button>
                </div>
            </div>
        </div>
    </div><!-- end .container-wrapper -->

