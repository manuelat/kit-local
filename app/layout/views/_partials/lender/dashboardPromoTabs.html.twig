<table class="table custom-table">
    <thead>
    <tr>
        <th>Kreditprojekt</th>
        <th class="text-center">Betrag</th>
        <th class="text-center">Zinssatz</th>
        <th>% finanziert</th>
        <th class="text-center">Restzeit</th>
    </tr>
    </thead>
    <tbody>
    {% for art in articles %}
        <tr>
            <td class="loan-title">
                <a href="{{ path('loanDetails') }}">{{ art.title |truncate(25) }}</a>
            </td>
            <td class="text-right">{{ art.amount }}</td>
            <td class="text-right">{{ art.interest }}<span class="grade {{ art.risk_class }} grade-small">{{ art.risk_title }}</span>
            </td>
            <td>
                <div class="progress default-progress pull-left">
                    <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"
                         style="width: {{ art.filled }};">
                    </div>
                </div>
                <div class="percentage pull-right">{{ art.funded }}</div>
            </td>
            <td class="text-center">{{ art.days_left }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>