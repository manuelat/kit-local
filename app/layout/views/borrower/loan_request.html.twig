{% extends 'layout.html.twig' %}

{% block header %}
    {# should be deleted #}
    {% include '_partials/headers/account_header_borrower_for_testing.html.twig' %}

{% endblock header %}

{% block body %}

{% include '_partials/borrower/offcanvas_loan_menu.html.twig' %}

<div class="spacing">
    <div class="container">

        <div class="row">

            <div class="col-xs-12 col-md-4 col-lg-4">
                <ul class="register-step">
                    <li class="register-step-item {% if step < 1 %}inactiv{% endif %}{% if step == 1 %}activ{% endif %}"><a href="/borrower/loan_request/1"><span class="number">1</span> <span class="text">Unternehmensprofil</span></a></li>
                    <li class="register-step-item {% if step < 2 %}inactiv{% endif %}{% if step == 2 %}activ{% endif %}"><a href="/borrower/loan_request/2"><span class="number">2</span> <span class="text">Kreditprojektdetails</span></a></li>
                    <li class="register-step-item {% if step < 3 %}inactiv{% endif %}{% if step == 3 %}activ{% endif %}"><a href="/borrower/loan_request/3"><span class="number">3</span> <span class="text">Zeichnungsberechtigte</span></a></li>
                    <li class="register-step-item {% if step < 4 %}inactiv{% endif %}{% if step == 4 %}activ{% endif %}"><a href="/borrower/loan_request/4"><span class="number">4</span> <span class="text">Bürgen</span></a></li>
                    <li class="register-step-item {% if step < 5 %}inactiv{% endif %}{% if step == 5 %}activ{% endif %}"><a href="/borrower/loan_request/5"><span class="number">5</span> <span class="text">Upload der Dokumente</span></a></li>
                    <li class="register-step-item {% if step < 6 %}inactiv{% endif %}{% if step == 6 %}activ{% endif %}"><a href="/borrower/loan_request/6"><span class="number">6</span> <span class="text">Prüfen & Abschicken</span></a></li>
                </ul>
            </div>

            <div class="col-xs-12 col-md-8 col-lg-8">

                {% include '_partials/borrower/' ~ loan_steps.step ~ '.html.twig' %}

            </div>

            <div class="desp-20 col-xs-12 hidden-lg"></div>

        </div><!-- .row -->

    </div><!-- .container -->

    <div class="container-wrapper form-footer odd">
        <div class="container spacing">
            <div class="row">
                <div class="col-xs-12 screen-align-btn">
                    <button class="btn btn-lg btn-brrwr" type="submit">{{ 'Speichern & Weiter' }}</button>
                </div>
            </div>
        </div>
    </div><!-- end .container-wrapper -->

    <div class="clearfix"></div>


</div><!-- end .spacing -->

{% endblock body %}

{% block js %}
    {{ parent() }}
    <script>
        /* horizontal loan request menu */
        function stepsResize() {
            if ($(document).width() > 675 && $(document).width() < 992) {
                var div_width = $('.register-step').width();
                var new_width = div_width - ($('.register-step-item').length * 45);
                $('.register-step .activ .text').css({'width': new_width + 'px'});
            }
        }
        $(function(){
            $(window).load(function() {
                stepsResize();
                resizeOffcanvasHeight();
            });
            $(window).resize(function() {
                stepsResize();
                resizeOffcanvasHeight();
            });

            /* offcanvas loan request menu */

            // remove the menu from DOM on desktop
            if ($(document).width() > 992) {
                $('#sidebar-loan-menu').remove();
            }

            // display popup menu selector when click on text
            $('.register-step-item .text').click(function(e){
                if ($(document).width() > 675 && $(document).width() < 992) {
                    e.preventDefault();
                    $('#sidebar-loan-menu').removeClass('hidden');
                }
            });
            $('#nav-remove, .nav-close-menu').click(function(e){
                e.preventDefault();
                $('#sidebar-loan-menu').addClass('hidden');

            });
        });

    </script>
{% endblock %}
