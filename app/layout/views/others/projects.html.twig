{% extends 'layout.html.twig' %}

{% block body %}

<div class="container">

    <div class="row row-offcanvas row-offcanvas-right">

    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-9 col-sm-6">{{ 'Aktuelle Kreditprojekte' }}</div>
            <div class="col-xs-3 pull-right hidden-sm hidden-md hidden-lg">
                <button id="filter-btn" data-toggle="offcanvas" class="btn btn-primary pull-right" type="button">{{ 'Filtern' }}</button>
            </div>
        </div>
    </div>

    <div id="sidebar-filter" class="sidebar-offcanvas hidden-lg">
        <div class="row">
            <div class="col-sm-12 hidden-sm hidden-md hidden-lg">
                <a href="#" id="filter-close" class="pull-right">{{ 'X' }}</a>
            </div>
        </div>

        <div class="col-md-12">
            <form action="" method="get" role="form" id="filter-bar">

                <p>{{ 'Kategorie' }}</p>

                <div class="radio">
                    <label>
                        <input type="radio" id="" name="option" value="option1" checked>
                        {{ 'Betriebsmittelfinanzierung' }}
                    </label>
                </div>

                <div class="radio">
                    <label>
                        <input type="radio" id="" name="option" value="option2">
                        {{ 'Investition in Anlagevermögen' }}
                    </label>
                </div>

                <div class="radio">
                    <label>
                        <input type="radio" id="" name="option" value="option3">
                        {{ 'Wachstumkapital' }}
                    </label>
                </div>

                <div class="radio">
                    <label>
                        <input type="radio" id="" name="option" value="option4">
                        {{ 'Tilgung von Steuer-oder Versicherungsverbindlichkeiten' }}
                    </label>
                </div>

                <div class="radio">
                    <label>
                        <input type="radio" id="" name="option" value="option5">
                        {{ 'Sonstige' }}
                    </label>
                </div>

                <div class="row">
                    <div class="col-xs-12 col-sm-4">
                        <p>{{ 'Kreditbetrag' }}</p>
                        <div id="slider-range-amount"></div>
                        <p class="text-center">
                            <label for="amount"></label>
                            <input type="text" id="amount" class="text-center" readonly style="border:0; color:#f6931f; font-weight:bold;">
                        </p>
                    </div>

                    <div class="col-xs-12 col-sm-4">
                        <p>{{ 'Zinssatz' }}</p>
                        <div id="slider-range-interest"></div>
                        <p class="text-center">
                            <label for="interest"></label>
                            <input type="text" id="interest" class="text-center" readonly style="border:0; color:#f6931f; font-weight:bold;">
                        </p>
                    </div>

                    <div class="col-xs-12 col-sm-4">
                        <p>{{ 'Laufzeit' }}</p>
                        <div id="slider-range-year"></div>
                        <p class="text-center">
                            <label for="years"></label>
                            <input type="text" id="years" class="text-center" readonly style="border:0; color:#f6931f; font-weight:bold;">
                        </p>
                    </div>
                </div><!-- end .row -->

                <div class="row">
                    <p class="col-xs-12 text-center">
                        <input type="submit" class="btn btn-primary" value="Filtern">
                    </p>
                </div>
            </form>
        </div>
    </div><!-- end .sidebar-offcanvas -->

        <table class="table table-striped custom-table" border="1">
            <thead class="header-frame">
                <tr>
                    <th></th>
                    <th><a href="">{{ 'Kreditprojekt' }}</a></th>
                    <th></th>
                    <th class="text-center"><a href="">{{ 'Betrag' }}</a></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for i in 1..8 %}
                <tr class="loan-details">
                    <td class="col-xs-1 grade-b">
                        <div class="pull-left">A+</div>
                    </td>
                    <td class="col-xs-5 col-sm-7">

                        <div class="loan-title pull-left"><a href="javascript:void(0)">{{'Immobilienprofis aus dem Ruhrgasasaasa lorem ispum'}}</a></div>
                    </td>
                    <td class="text-right col-xs-2 col-sm-1 red">{{'13,38%' }}<br>{{ '4 Jahre' }}</td>
                    <td class="col-xs-3 col-sm-3 text-center">
                        <div class="progress custom-progress">
                            <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: 60%;">
                                150.000 €
                            </div>
                        </div>
                    </td>
                    <td class="col-xs-1">
                        <div class="text-center">
                            <a href="" class="more"><i> > </i></a>
                        </div>
                    </td>
                </tr>


                  {#
                <tr class="hidden loan-details-extended">
                    <td colspan="3">
                        <table class="table custom-table">
                            <thead class="header-frame">
                                <tr>
                                    <th class="col-xs-4">{{'Lauftzeit' }}</th>
                                    <th class="text-right col-xs-4">{{'% Finanziert' }}</th>
                                    <th class="col-xs-4"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="gray">
                                    <td class="col-xs-4">{{'4 Jahre' }}</td>
                                    <td class="col-xs-4">
                                        <div class="pull-right">
                                            <div class="progress pull-left">
                                                <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                                                    <span class="sr-only">{{'60% Complete' }}</span>
                                                </div>
                                            </div>
                                            <div class="percentage pull-left text-right">{{'160%' }}</div>
                                        </div>
                                    </td>
                                    <td class="text-right col-xs-4"><a href=""><i class="glyphicon glyphicon-chevron-right"></i></a></td>
                                </tr>
                            <tbody>
                        </table>
                    </td>
                </tr>

                    #}
                {% endfor %}
            </tbody>
        </table>
    </div>
</div><!-- end .row .row-offcanvas .row-offcanvas-right -->

</div>
{% endblock %}