{% extends 'layout.html.twig' %}

{% block header %}

    {% include '_partials/headers/account-header.html.twig' %}

{% endblock header %}

{% block body %}

<div class="container spacing">

    <div class="row">
        <div class="col-xs-12">
            <h1>Passwort Ã¤ndern</h1>
            CMS block: user change password info
        </div>
    </div>

    <div class="row">

        <div class="col-xs-12 col-sm-8">
            <form action="" method="post" id="profile_password_change">
                <div class="form-group">
                    <label for="password_change_old">Aktuelles Passwort</label>
                    <input type="password" id="password_change_old" class="form-control" required="required">
                    <label for="password_change_old" class="error" role="alert">
                        Bitte geben Sie Ihr aktuelles Passwort ein.
                    </label>
                </div>
                <div class="form-group">
                    <label for="password_change_new">Neues Passwort</label>
                    <input type="password" id="password_change_new" class="form-control" required="required">
                    <label for="password_change_new" class="error hidden" role="alert">
                        Bitte geben Sie Ihr neues Passwort ein.
                    </label>
                </div>
                <div class="form-group">
                    <label for="password_change_confirm_new">Passwort erneut eingeben</label>
                    <input type="password" id="password_change_confirm_new" class="form-control" required="required">
                    <label for="password_change_confirm_new" class="error hidden" role="alert">
                        Bitte geben Sie Ihr neues Passwort erneut ein.
                    </label>
                </div>
                <div class="row">
                    <div class="col-xs-12 text-right">
                        <button type="submit" class="btn btn-lg btn-nvstr">Passwort speichern</button>
                    </div>
                </div>
            </form>
        </div>

        <div class="hidden-xs col-sm-4">
            CMS block: user change password sidebar
        </div>

    </div><!-- .row -->

</div><!-- .container -->

{% endblock body %}